<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sample.oguz.com.firebaseauthentication.MainActivity">



    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="6dp">
        <EditText
            android:id="@+id/userEmailTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="E-Mail"
            android:inputType="textEmailAddress"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_above="@+id/userPasswordTxt"
            android:layout_toEndOf="@+id/progressBar"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/userPasswordTxt"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="96dp"
            android:layout_above="@+id/googleSignBtn"
            android:layout_toEndOf="@+id/progressBar"
            android:layout_marginBottom="49dp" />

        <Button
            android:id="@+id/googleSignBtn"
            android:layout_width="204dp"
            android:layout_height="48dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:text="Google Sign In"
            android:textAllCaps="false"
            tools:layout_editor_absoluteX="78dp"
            tools:layout_editor_absoluteY="457dp"
            android:layout_above="@+id/signupBtn"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/forgotPasswordBtn"
            android:layout_width="220dp"
            android:layout_height="49dp"
            android:layout_gravity="center_horizontal"
            android:text="Forgot your password?"
            android:textAllCaps="false"
            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="397dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="52dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/signupBtn"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sign Up"
            android:textAllCaps="false"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="186dp"
            android:layout_above="@+id/forgotPasswordBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/normalSignBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/googleSignBtn"
            android:layout_centerHorizontal="true"
            android:text="Sign In" />

        <Button
            android:id="@+id/connectWithFbButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="  connect_with_facebook"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
